<Window x:Class="Client.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Confirm" Height="135.333" Width="307.667" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="Text_Message" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Height="45" Width="275" TextAlignment="Center"/>
        <Button x:Name="Button_Yes" Grid.Column="0" Grid.Row="0" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="29" Background="#FF316838" Foreground="White" Click="Button_Yes_Click" Margin="35,60,0,0"/>
        <Button x:Name="Button_No" Grid.Column="0" Grid.Row="0" Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="29" Background="#FF316838" Foreground="White" Click="Button_No_Click" Margin="150,60,0,0"/>

    </Grid>
</Window>
