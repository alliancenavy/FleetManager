<Window x:Class="Client.SimpleTextPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="SimpleTextPrompt" Height="131" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Button x:Name="Button_OK" Grid.Row="0" Content="OK" VerticalAlignment="Top" Height="29" Background="#FF316838" Foreground="White" Click="Accept" HorizontalAlignment="Left" Width="100" Margin="45,50,0,0"/>
        <Button x:Name="Button_Cancel" Grid.Row="0" Content="Cancel" VerticalAlignment="Top" Height="29" Background="#FF316838" Foreground="White" Click="Button_Cancel_Click" HorizontalAlignment="Left" Width="100" Margin="150,50,0,0"/>
        <TextBox x:Name="Textbox_Entry" Height="23" Margin="10,10,9.667,0" TextWrapping="Wrap" VerticalAlignment="Top" KeyDown="Textbox_Entry_KeyDown" AcceptsReturn="False"/>

    </Grid>
</Window>
